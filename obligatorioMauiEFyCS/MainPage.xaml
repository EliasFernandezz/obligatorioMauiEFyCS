<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:obligatorioMauiEFyCS" 
             x:Class="obligatorioMauiEFyCS.MainPage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0c4cb3" Offset="0.0"/>
            <GradientStop Color="#4e58a3" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Grid ColumnDefinitions="*,Auto" Margin="0,25,0,0">
                <Label 
                Text="¡Bienvenido!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                Grid.Column="0"
                HorizontalOptions="Start"/>

                <Button
                x:Name="btnCerrarSesion"
                Text="Cerrar Sesión"
                Grid.Column="1"
                Clicked="btnCerrarSesion_Clicked"
                HorizontalOptions="End"/>
            </Grid>

            <Image
                x:Name="imgFotoPerfil"
                SemanticProperties.HeadingLevel="Level1"
                HorizontalOptions="Center" 
                WidthRequest="250"
                HeightRequest="250"
                Aspect="Fill">
                <Image.Clip>
                    <EllipseGeometry
                        Center="125,125"
                        RadiusX="125"
                        RadiusY="125" />
                </Image.Clip>
            </Image>

            <Label
                x:Name="lblBienvenida"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <Label
                Text="Escucha nuestra radio online de forma gratuita"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level3" 
                />

            <toolkit:MediaElement
            x:Name="radioPlayer"
            Source="https://icecasthd.net/proxy/azulp/live"
            ShouldAutoPlay="False"
            HeightRequest="125" 
            WidthRequest="350"
            HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
