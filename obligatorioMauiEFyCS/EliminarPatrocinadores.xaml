<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obligatorioMauiEFyCS.EliminarPatrocinadores"
             Title="EliminaciÃ³n de patrocinador">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0c4cb3" Offset="0.0"/>
            <GradientStop Color="#4e58a3" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"></BoxView>
            <Frame CornerRadius="15" HasShadow="True" Padding="20" BackgroundColor="#44000000" HorizontalOptions="Center" WidthRequest="300">


                <VerticalStackLayout Spacing="15">
                    <Entry x:Name="idPatrocinador" Placeholder="Ingrese el id del patrocinador" PlaceholderColor="Black" Keyboard="Numeric" TextColor="Black"/>
                    <Button Text="Eliminar patrocinador" HorizontalOptions="Center" Clicked="OnClickEliminarPatrocinador"/>

                </VerticalStackLayout>


            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
