<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="obligatorioMauiEFyCS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:obligatorioMauiEFyCS">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:Login}"
        Route="Login"
        Shell.NavBarIsVisible="False"
        Shell.FlyoutItemIsVisible="False" />

    <ShellContent
        Title="Registro"
        ContentTemplate="{DataTemplate local:Registro}"
        Route="Registro"
        Shell.NavBarIsVisible="False"
        Shell.FlyoutItemIsVisible="False" />

    <FlyoutItem Title="Pagina Principal">
        <ShellContent
            Title="¡Bienvenido!"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Patrocinadores">
        <ShellContent
            Title="Gestionar patrocinadores"
            ContentTemplate="{DataTemplate local:GestionarPatrocinadores}"
            Route="GestionarPatrocinadores" />

        <ShellContent
            Title="Ver patrocinadores"
            ContentTemplate="{DataTemplate local:VerPatrocinadores}"
            Route="VerPatrocinadores" />

        <ShellContent
            Title="Eliminar patrocinadores"
            ContentTemplate="{DataTemplate local:EliminarPatrocinadores}"
            Route="EliminarPatrocinadores" />

        <ShellContent
            Title="Gelocalización"
            ContentTemplate="{DataTemplate local:VerPatrocinadoresMapa}"
            Route="VerPatrocinadoresMapa" />

    </FlyoutItem>

    <FlyoutItem Title="Clima">
        <ShellContent
            Title="Clima actual y pronostico"
            ContentTemplate="{DataTemplate local:Clima}"
            Route="Clima" />
    </FlyoutItem>

    <FlyoutItem Title="Cotizaciones">
        <ShellContent
            Title="Cotizacion frente a peso uruguayo"
            ContentTemplate="{DataTemplate local:Cotizaciones}"
            Route="Cotizaciones" />
    </FlyoutItem>

    <FlyoutItem Title="Noticias">
        <ShellContent
            Title="Noticias actuales de Uruguay"
            ContentTemplate="{DataTemplate local:Noticias}"
            Route="Noticias" />
    </FlyoutItem>

    <FlyoutItem Title="Cine">
        <ShellContent
            Title="Proximos estrenos"
            ContentTemplate="{DataTemplate local:Cine}"
            Route="Cine" />
    </FlyoutItem>

</Shell>
