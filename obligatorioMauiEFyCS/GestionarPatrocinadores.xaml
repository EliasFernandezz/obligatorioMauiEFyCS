<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obligatorioMauiEFyCS.GestionarPatrocinadores"
             Title="Gestión de patrocinadores">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"></BoxView>
            <Frame CornerRadius="15"
               HasShadow="True"
               Padding="20"
               BackgroundColor="LightBlue">

                <VerticalStackLayout Spacing="15">
                    <Entry x:Name="nombrePatrocinador" Placeholder="Escriba el nombre del patrocinador" PlaceholderColor="Black"/>
                    <Entry x:Name="iconoDelPatrocinador" Placeholder="Pegá la URL del icono" PlaceholderColor="Black" Keyboard="Url" TextColor="Black" />
                    <Entry x:Name="ubicacionDelPatrocinador" Placeholder="Eliga la ubicación del patrocinador" PlaceholderColor="Black"/>
                    <Button Text="Crear patrocinador" BackgroundColor="Aqua" TextColor="Black" Clicked="OnClickCrearPatrocinador"/>
                </VerticalStackLayout>


            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>