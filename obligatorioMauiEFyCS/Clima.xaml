<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obligatorioMauiEFyCS.Clima"
             Title="Clima Actual de Punta del Este:">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0c4cb3" Offset="0.0"/>
            <GradientStop Color="#4e58a3" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        
        <VerticalStackLayout Padding="20" Spacing="20">

            <Grid HorizontalOptions="Center" VerticalOptions="Center">

                <Frame CornerRadius="12" HasShadow="True" Padding="15" BackgroundColor="#33000000" MaximumWidthRequest="800" HeightRequest="200" HorizontalOptions="Fill">

                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Textos arriba -->
                            <RowDefinition Height="*"/>
                            <!-- Icono ocupa el resto y se centra un poco para arriba -->

                        </Grid.RowDefinitions>
                        <VerticalStackLayout Grid.Row="0">
                            <Label x:Name="ciudadLabel" FontSize="24" FontAttributes="Bold"/>
                            <Label x:Name="temperaturaLabel" FontSize="20"/>
                            <Label x:Name="descripcionLabel" FontSize="18"/>
                        </VerticalStackLayout>

                        <Image x:Name="iconoImagen" WidthRequest="120" HeightRequest="165"
                            HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="1"/>

                    </Grid>

                </Frame>
            </Grid>

            
            <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"/>
                <Label Text="Pronóstico para los próximos 5 días"
                     FontSize="20"
                     FontAttributes="Bold"
                     HorizontalOptions="Center"/>
            <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"/>

            <CollectionView x:Name="listaPronosticoProximosDias"
                HorizontalScrollBarVisibility="Always"
                HorizontalOptions="Center"
                HeightRequest="300">
                
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Horizontal" Span="1" HorizontalItemSpacing="20"/>
                </CollectionView.ItemsLayout>
                
                <CollectionView.ItemTemplate>
                    
                    <DataTemplate>
                        
                        <Frame Padding="10"
                            BackgroundColor="#33ffffff"
                            CornerRadius="12"
                            WidthRequest="200"
                            MaximumHeightRequest="200"
                            HorizontalOptions="Fill">
                            
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding dia}" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center"/>
                                <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"/>
                                <Label Text="{Binding fecha}" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center"/>
                                <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"/>
                                <Label Text="{Binding pronostico.Main.Temp, StringFormat='Temp: {0}°C'}" HorizontalOptions="Center"/>
                                <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"/>
                                <Label Text="{Binding pronostico.Weather[0].Description}" HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>