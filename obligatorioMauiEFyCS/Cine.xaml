<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obligatorioMauiEFyCS.Cine"
             Title="Peliculas de estreno">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0c4cb3" Offset="0.0"/>
            <GradientStop Color="#4e58a3" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <ScrollView>
        <VerticalStackLayout>
            <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"></BoxView>
            <Entry x:Name="GeneroEntry" Placeholder="Escribí el género o palabra clave" Margin="25,25,25,25" HorizontalOptions="Fill" MaximumWidthRequest="450"/>
            <Button Text="Buscar por genero" Clicked="OnFiltrarPeliculasPorGeneroYPalabra" HorizontalOptions="Start" Margin="25,0,0,0"/>

            <CollectionView x:Name="EstrenosList">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" x:Name="peliculasLayout" HorizontalItemSpacing="10" VerticalItemSpacing="10"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0" Margin="0" BackgroundColor="Transparent">
                            <Frame
                                Padding="10"
                                Margin="5"
                                CornerRadius="12"
                                BackgroundColor="#33000000"
                                MaximumWidthRequest="500"
                                HorizontalOptions="Fill">

                                <VerticalStackLayout>
                                    <Image
                                        Source="{Binding PosterPath}"
                                        Aspect="AspectFill"
                                        HeightRequest="220"
                                        WidthRequest="205"
                                        HorizontalOptions="Center"
                                        Margin="0"/>

                   
                                    <Label
                                        Text="{Binding Title}"
                                        FontSize="Medium"
                                        FontAttributes="Bold"
                                        HorizontalTextAlignment="Center"
                                        Margin="5,5,5,0"
                                        MaxLines="1"
                                        LineBreakMode="TailTruncation"/>

                                    <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"></BoxView>

                                    <Label
                                        Text="{Binding Overview}"
                                        FontSize="Small"
                                        HorizontalTextAlignment="Center"
                                        Margin="5,0,5,5" 
                                        LineBreakMode="WordWrap"
                                        MaxLines="4"/>

                                    <Label
                                        Text="{Binding ReleaseDate, StringFormat='{0:dd/MM/yyyy}'}"
                                        FontSize="Small"
                                        TextColor="Gray"
                                        HorizontalTextAlignment="Center" 
                                        Margin="0,0,0,5"/>
                                </VerticalStackLayout>
                            </Frame>    
                        </Grid>
                        
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
    

</ContentPage>