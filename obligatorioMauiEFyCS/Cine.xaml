<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obligatorioMauiEFyCS.Cine"
             Title="Peliculas de estreno">
    <ScrollView>
        <VerticalStackLayout>
            <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"></BoxView>
            <Entry x:Name="GeneroEntry" Placeholder="Escribí el género o palabra clave" PlaceholderColor="Black"/>
            <Button Text="Buscar por genero" Clicked="OnFiltrarPeliculasPorGeneroYPalabra" />

            <CollectionView x:Name="EstrenosList">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="10" VerticalItemSpacing="10"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0" Margin="0" BackgroundColor="Transparent">
                            <BoxView Color="DarkBlue" Opacity="0.4" CornerRadius="10" WidthRequest="520"></BoxView>
                            <Frame
                                Padding="10"
                                Margin="5"
                                HasShadow="True"
                                CornerRadius="12"
                                BackgroundColor="White"
                                WidthRequest="490">

                                <VerticalStackLayout>
                                    <Image
                                        Source="{Binding PosterPath}"
                                        Aspect="AspectFill"
                                        HeightRequest="220"
                                        WidthRequest="205"
                                        HorizontalOptions="Center"
                                        Margin="0"/>

                   
                                    <Label
                                        Text="{Binding Title}"
                                        FontSize="Medium"
                                        FontAttributes="Bold"
                                        HorizontalTextAlignment="Center"
                                        Margin="5,5,5,0"
                                        MaxLines="1"
                                        LineBreakMode="TailTruncation"/>

                                    <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"></BoxView>

                                    <Label
                                        Text="{Binding Overview}"
                                        FontSize="Small"
                                        TextColor="Black"
                                        HorizontalTextAlignment="Center"
                                        Margin="5,0,5,5" 
                                        LineBreakMode="WordWrap"
                                        MaxLines="16"/>

                                    <Label
                                        Text="{Binding ReleaseDate, StringFormat='{0:dd/MM/yyyy}'}"
                                        FontSize="Small"
                                        TextColor="Gray"
                                        HorizontalTextAlignment="Center" 
                                        Margin="0,0,0,5"/>
                                </VerticalStackLayout>
                            </Frame>    
                        </Grid>
                        
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
    

</ContentPage>