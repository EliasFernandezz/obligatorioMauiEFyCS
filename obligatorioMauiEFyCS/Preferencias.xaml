<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obligatorioMauiEFyCS.Preferencias"
             Title="Preferencias">
    <ScrollView>
        <VerticalStackLayout>
            <Frame BackgroundColor="#2537db" CornerRadius="16" Padding="24" HasShadow="True">
                <VerticalStackLayout>
                    <Label Text="Selecciona tus preferencias:" 
                           FontSize="22" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <Grid ColumnSpacing="20" RowSpacing="18">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Text="Ver Clima:" VerticalOptions="Center"/>
                        <RadioButton x:Name="radioVerClimaSi" Grid.Row="0" Grid.Column="1" Content="Sí" GroupName="verClima"/>
                        <RadioButton x:Name="radioVerClimaNo" Grid.Row="0" Grid.Column="2" Content="No" GroupName="verClima"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="Ver Noticias:" VerticalOptions="Center"/>
                        <RadioButton x:Name="radioVerNoticiasSi" Grid.Row="1" Grid.Column="1" Content="Sí" GroupName="verNoticias"/>
                        <RadioButton x:Name="radioVerNoticiasNo" Grid.Row="1" Grid.Column="2" Content="No" GroupName="verNoticias"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="Ver Cotizaciones:" VerticalOptions="Center"/>
                        <RadioButton x:Name="radioVerCotizacionesSi" Grid.Row="2" Grid.Column="1" Content="Sí" GroupName="verCotizaciones"/>
                        <RadioButton x:Name="radioVerCotizacionesNo" Grid.Row="2" Grid.Column="2" Content="No" GroupName="verCotizaciones"/>

                        <Label Grid.Row="3" Grid.Column="0" Text="Ver Cine:" VerticalOptions="Center"/>
                        <RadioButton x:Name="radioVerCineSi" Grid.Row="3" Grid.Column="1" Content="Sí" GroupName="verCine"/>
                        <RadioButton x:Name="radioVerCineNo" Grid.Row="3" Grid.Column="2" Content="No" GroupName="verCine"/>

                        <Label Grid.Row="4" Grid.Column="0" Text="Ver Patrocinadores:" VerticalOptions="Center"/>
                        <RadioButton x:Name="radioVerPatrocinadoresSi" Grid.Row="4" Grid.Column="1" Content="Sí" GroupName="verPatrocinadores"/>
                        <RadioButton x:Name="radioVerPatrocinadoresNo" Grid.Row="4" Grid.Column="2" Content="No" GroupName="verPatrocinadores"/>

                        <Label Grid.Row="5" Grid.Column="0" Text="Gestionar Patrocinadores:" VerticalOptions="Center"/>
                        <RadioButton x:Name="radioGestionarPatrocinadoresSi" Grid.Row="5" Grid.Column="1" Content="Sí" GroupName="gestionarPatrocinadores"/>
                        <RadioButton x:Name="radioGestionarPatrocinadoresNo" Grid.Row="5" Grid.Column="2" Content="No" GroupName="gestionarPatrocinadores"/>
                    </Grid>

                    <Button Text="Guardar Preferencias"
                            Clicked="OnGuardarPreferenciasClicked"
                            BackgroundColor="Black"
                            TextColor="White"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Margin="0,20,0,0"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>