<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obligatorioMauiEFyCS.Login"
             NavigationPage.HasNavigationBar="False"
             Title="Login">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0c4cb3" Offset="0.0"/>
            <GradientStop Color="#4e58a3" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Margin="0,150,0,0">
        <Label 
            Text="Iniciar sesión"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" 
            Margin="60,0,0,0"/>

        <StackLayout Padding="30" Spacing="10" HorizontalOptions="Center">
            <Entry x:Name="NicknameEntry" Placeholder="Nickname"/>
            <Entry x:Name="ContrasenaEntry" Placeholder="Contraseña" IsPassword="True" />

            <Button
                    x:Name="btnLogin"
                    Text="Iniciar sesiòn" 
                    SemanticProperties.Hint="con este boton el usuario puede iniciar sesiòn en la aplicacion"
                    Clicked="btnLogin_Clicked"
                    HorizontalOptions="Center" 
                    Margin="0,0,0,10"/>

            <Button
                    x:Name="btnLoginHuella"
                    Text="¿Usas huella dactilar? ¡Inicia sesión con ella!" 
                    SemanticProperties.Hint="con este boton el usuario puede iniciar sesiòn usando una huella dactilar. por defecto se inicia sesion como el primer usario encontrado en la BDD"
                    Clicked="btnLoginHuella_Clicked"
                    HorizontalOptions="Center" 
                    Margin="0,0,0,25"/>

            <Button
                    x:Name="btnIrARegistro"
                    Text="No tienes una cuenta? Registrate"
                    SemanticProperties.Hint="ir al registro cuando se toca este boton"
                    Clicked="IrARegistro_Clicked"/>
        </StackLayout>

    </VerticalStackLayout>
</ContentPage>